<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Maurice Antonio Kelly @MAKMaurice</Authors>
        <Company>Pragmatic Applications</Company>
        <Copyright>Pragmatic Applications - Maurice Antonio Kelly @MAKMaurice</Copyright>
        <Description>A .NET Generic CRUD Interface Library</Description>
        <PackageReleaseNotes>A .NET Generic CRUD Interface Library</PackageReleaseNotes>
        <Version>0.0.0.4</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>A .NET6 Generic CRUD Interface Library</PackageTags>
        <RepositoryType>A .NET Library</RepositoryType>
        <RepositoryUrl>https://github.com/pragmatic-applications/MAK.Lib.Generic.Crud.Interface</RepositoryUrl>
